{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": false
    },
    "content": {
      "type": "blocks",
      "required": true
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "excerpt": {
      "type": "text"
    },
    "category": {
      "type": "string"
    },
    "author": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    }
  }
}
